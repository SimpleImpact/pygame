import pygame

# pygame setup
pygame.init()
screen = pygame.display.set_mode((1280, 720))
clock = pygame.time.Clock()
running = True
dt = 0
velocity = 0
velocityFactor = 10
velocitymax = 500
velocityX = 0


player_pos = pygame.Vector2(screen.get_width() / 2, screen.get_height() / 2)

while running:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            running = False

    screen.fill("purple")

    pygame.draw.circle(screen, "red", player_pos, 40)

    keys = pygame.key.get_pressed()

    if keys[pygame.K_d]:
        if velocityX < 500:
            velocityX += velocityFactor
    elif keys[pygame.K_a]:
        if velocity > -500:
            velocityX -= velocityFactor
    else:
        if velocityX < 0:
            velocityX += 20
        if velocityX > 0:
            velocityX -= 20

    
    if keys[pygame.K_w]:
        player_pos.y -= velocity * dt
    if keys[pygame.K_s]:
        player_pos.y += velocity * dt
    if keys[pygame.K_a]:
        player_pos.x -= velocity * dt
    if keys[pygame.K_d]:
        player_pos.x += velocity * dt
    print(velocity)

    if velocityX < -1:
        player_pos.x += velocityX
    if velocityX > 1:
        player_pos.x += velocityX
    
    print(velocityX)

    pygame.display.flip()

    dt = clock.tick(60) / 1000

pygame.quit()
